{
    "family": "mlops-task", // <-- CHANGED to match AWS Console
    "containerDefinitions": [
        {
            "name": "predictive-maintenance-container",
            "image": "will-be-replaced-by-github-actions",
            "cpu": 256,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 7860,
                    "hostPort": 7860,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/predictive-maintenance",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "512", // <-- INCREASED slightly for safety (0.5 vCPU)
    "memory": "1024", // <-- INCREASED to 1GB (matches what we set in Console)
    "executionRoleArn": "arn:aws:iam::586197446329:role/ecsTaskExecutionRole"
}