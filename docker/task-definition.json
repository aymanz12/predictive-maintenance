{
    "family": "predictive-maintenance-task",
    "containerDefinitions": [
        {
            "name": "predictive-maintenance-container",
            "image": "will-be-replaced-by-github-actions",
            "cpu": 256,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 7860,
                    "hostPort": 7860,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/predictive-maintenance",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole"
}